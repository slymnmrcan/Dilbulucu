
@{
    ViewBag.Title = "Index";
}


<div class="alert-danger">@ViewBag.succes</div>

<div class="mt-3">


    <form method="post">

        <div class="form-group">

            <label> Kelimeleri Girin</label>
            <textarea name="Word" required class="form-control" rows="5"></textarea>

        </div>
        <div class="form-group">
            <label class="d-block"> Diller</label>
            <select class="form-control" name="diller">
                
                @foreach (var item in ViewBag.Diller)
                {
                    <option value="@item.id"> @item.LanguageName</option>
                }
            </select>
        </div>

        <input type="submit" value="Kaydet" class="btn btn-primary" />

    </form>

</div>
